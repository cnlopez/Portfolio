---
import './hero.css';
import Boton from '../atoms/Boton.astro';
---

<section class="hero">

	<div class="hero__container">
		<div class="text__content">
			<h1 class="hero__title color__gradiente">Nikolai López</h1>
			<p class="hero__text">
				Innovative .NET Full Stack Developer Specializing in Building Dynamic, User-Centric Applications with Expertise in Both Front-End and Back-End Technologies. Bringing Ideas to Life with Precision, Creativity, and a Passion for Excellence and Learning.
			</p>
			<Boton id="btnWantMore" href="#" texto="Quiero saber más"/>
		</div>
    <img
		class="hero__img"
		src="/img/jhon-doe.webp"
		alt="Nikolai López"
		width="384"
    	height="384"
	/>
	</div>
</section>
